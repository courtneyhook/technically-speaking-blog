<h1>blogpost</h1>

<h4>{{post.title}}</h4>
<p>{{post.body}}</p>

<button
  class="comment-button"
  data-id="{{id}}"
  id="comment-button-{{id}}"
>Comment</button>
<form id="{{id}}" class="d-none">
  <label for="added-comment">Comment: </label>
  <br />
  <textarea
    id="added-comment-{{id}}"
    data-id="{{id}}"
    cols="60"
    rows="5"
  ></textarea>
  <br />
  <button
    class="save-button"
    data-id="{{id}}"
    id="save-comment-{{id}}"
  >Save</button>
</form>
