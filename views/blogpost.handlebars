/>

<h4>{{post.title}}</h4>
<p>{{post.body}}</p>
{{#each post.Comments}}
  <p>{{blogger.username}}: {{comment_body}}</p>
{{/each}}

{{#if logged_in}}
  <button
    class="comment-button"
    data-id="{{post.id}}"
    id="comment-button-{{post.id}}"
  >Comment</button>
  <form id="{{post.id}}" class="d-none">
    <label for="added-comment">Comment: </label>
    <br />
    <textarea
      id="added-comment-{{post.id}}"
      data-id="{{post.id}}"
      cols="60"
      rows="5"
    ></textarea>
    <br />
    <button
      class="save-button"
      data-id="{{post.id}}"
      id="save-comment-{{post.id}}"
    >Save</button>
  </form>

{{else}}
  <p>Please <a href="/login">login</a> in to leave a comment. </p>

{{/if}}
